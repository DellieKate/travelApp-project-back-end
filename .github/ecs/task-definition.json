{
    "containerDefinitions": [
        {
            "name" : "mongodb",
            "image" : "mongo:latest",
            "portMappings" :[
                {
                    "containerPort" : 27017,
                    "hostPort" : 27017
                }
            ],
            "healthCheck" : {
                "command": ["CMD-SHELL", "mongosh --eval 'db.runCommand({ping:1})'"],
                "interval": 30,
                "timeout": 5,
                "retries": 3
            }
        },
        {
            "name" : "seeder",
            "image": "304619557163.dkr.ecr.ap-southeast-2.amazonaws.com/travel-backend:travelApp-v0.1.3-deployment.2",
            "essential": false,
            "dependsOn":[
                {
                    "containerName" : "mongodb",
                    "condition" : "HEALTHY"
                }
            ],
            "environment": [
                {
                    "name": "MONGO_URL_PROD",
                    "value": "mongodb://localhost:27017/travelApp-project-backend"
                }
            ]
        },
        {
            "name": "travelapp-container",
            "image": "304619557163.dkr.ecr.ap-southeast-2.amazonaws.com/travel-backend",
            "essential": true,
            "dependsOn":[
                {
                    "containerName" : "seeder",
                    "condition" : "SUCCESS"
                }
            ],
            "portMappings": [
                {
                    "name": "travelapp-container-3000-tcp",
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PORT",
                    "value": "3000"
                },
                {
                    "name": "JWT_SECRET",
                    "value": "CoderAcademyCharliInnaKate"
                },
                {
                    "name": "MONGO_URL_TEST",
                    "value": "mongodb://127.0.0.1:27017/travelApp_test"
                },
                {
                    "name": "MONGO_URL_DEV",
                    "value": "mongodb://localhost:27017/travelApp-project-backend"
                },
                {
                    "name": "MONGO_URL_PROD",
                    "value": "mongodb://localhost:27017/travelApp-project-backend"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/travelapp-task",
                    "awslogs-create-group": "true",
                    "awslogs-region": "ap-southeast-2",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "systemControls": []
        }
    ],
    "family": "travelapp-task",
    "executionRoleArn": "arn:aws:iam::304619557163:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "tags": []
}